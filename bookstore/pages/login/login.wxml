<!--pages/login/login.wxml-->
<view class="weui-cells weui-cells_after-title"> 
  <view class="weui-cell weui-cell_input"> 
    <view class="weui-cell__hd"> 
      <view class="weui-label">账户</view> 
    </view>
    <view class="weui-cell__bd"> 
      <input class="weui-input" placeholder="请输入账户" bindchange="changeUsername"/> 
    </view> 
  </view>
  <view class="weui-cell weui-cell_input"> 
    <view class="weui-cell__hd"> 
      <view class="weui-label">密码</view> 
    </view>
    <view class="weui-cell__bd"> 
      <input class="weui-input" password="true" placeholder="请输入密码" bindchange="changePassword"/> 
    </view> 
  </view>
  <view class="page__bd page__bd_spacing submit"> 
    <button class="weui-btn" type="primary" bindtap="bindSubmit">登录</button> 
  </view>
</view>